using System;

public class Goal
{
    let message <- "Hello World";
    
    Terminal.Writeln(message);

    const messageObject <-
    {
        content,
        display
    }

    Terminal.Readln("Enter a message", messageObject.content);
    
    If (messageObject.content = "")
    {
        messageObject.display <- false;
    }
    else
    {
        messageObject.display <- true;
    }

    If (messageObject.display = true)
    {
        Terminal.Writeln(messageObject.content);
    }
}

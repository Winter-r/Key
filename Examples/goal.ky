public class Goal
{
    let message <- "Hello World";
    
    Writeln(message);

    const messageObject <-
    {
        content: "",
        display: false
    }

    Readln("Enter a message", messageObject.content);
    
    If (messageObject.content = "")
    {
        messageObject.display <- false;
    }
    else
    {
        messageObject.display <- true;
    }

    If (messageObject.display = true)
    {
        Writeln(messageObject.content);
    }
}
